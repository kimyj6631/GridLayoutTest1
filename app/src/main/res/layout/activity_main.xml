<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="luna2803.kr.hs.emrim.gridlayouttest1.MainActivity">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="5"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="5"
        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/but_0"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="0" />

        <Button
            android:id="@+id/but_1"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="1" />

        <Button
            android:id="@+id/but_2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="2" />

        <Button
            android:id="@+id/but_3"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="3" />

        <Button
            android:id="@+id/but_4"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="4" />

        <Button
            android:id="@+id/but_5"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:text="5" />

        <Button
            android:id="@+id/but_6"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="6"

            />

        <Button
            android:id="@+id/but_7"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="7" />

        <Button
            android:id="@+id/but_8"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="8" />

        <Button
            android:id="@+id/but_9"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="9" />

        <Button
            android:id="@+id/but_op1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="5"
            android:layout_gravity="fill_horizontal"
            android:layout_row="3"
            android:text="+" />

        <Button
            android:id="@+id/but_op2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="5"
            android:layout_gravity="fill_horizontal"
            android:layout_row="4"
            android:text="-"

            />

        <Button
            android:id="@+id/but_op3"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="5"
            android:layout_gravity="fill_horizontal"
            android:layout_row="5"
            android:text="*" />

        <Button
            android:id="@+id/but_op4"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="5"
            android:layout_gravity="fill_horizontal"
            android:layout_row="6"
            android:text="/" />
    </GridLayout>
</LinearLayout>
